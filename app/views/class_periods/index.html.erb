<p id="notice"><%= notice %></p>

<h1>Class Periods</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Week day</th>
      <th>Attendance count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @class_periods.each do |class_period| %>
      <tr>
        <td><%= class_period.date %></td>
        <td><%= class_period.week_day %></td>
        <td><%= class_period.attendance_count %></td>
        <td><%= link_to 'Show', class_period %></td>
        <td><%= link_to 'Edit', edit_class_period_path(class_period) %></td>
        <td><%= link_to 'Destroy', class_period, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

